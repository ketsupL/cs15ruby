          <!-- Footer / Copies -->
          <div class="flex justify-between">
            <p class="text-sm mt-auto"><strong>Total Copies:</strong> <%= book.book_copies.count %></p>
            <%= button_to "Rent", "#", method: :get, class: "px-4 py-1 bg-red-400 text- text-white rounded-lg shadow hover:bg-red-500 
                  focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2 transition" %>
