<div class="min-w-2/3 mx-auto px-4 py-8">
  <h1 class="text-red-400 font-black text-4xl mb-8">Books</h1>

  <!-- Grid container -->
  <div class="grid gap-8 grid-cols-[repeat(auto-fill,minmax(16rem,1fr))]">
    <%(0..4).each do |i| %>
      <% @books.each do |book| %>
        <!-- Card -->
        <div class="border p-4 rounded shadow flex flex-col overflow-hidden bg-white">
          
          <!-- Cover image -->
          <% if book.cover.present? %>
            <img src="<%= book.cover %>" alt="<%= book.title %> cover" class="w-full h-48 object-cover rounded mb-4">
          <% end %>

          <!-- Title and Author -->
          <h2 class="font-semibold text-lg mb-1 truncate" title="<%= book.title %>"><%= book.title %></h2>
          <p class="text-gray-700 text-sm mb-3 truncate" title="<%= book.author %>"><%= book.author %></p>

          <!-- Description -->
          <p class="text-gray-600 text-sm mb-4 line-clamp-3">
            <%= book.description %>
