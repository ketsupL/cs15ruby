<% content_for(:title, "Settings") %>

<div class="max-w-6xl mx-auto px-4 py-8" data-controller="settings">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">Account Settings</h1>
    <p class="text-gray-600">Manage your account information and rental history</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <!-- Left Column: User Information -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
          </svg>
          Account Information
        </h2>
        
        <div class="space-y-4">
          <div class="flex items-center p-3 bg-gray-50 rounded-lg">
            <div class="w-12 h-12 bg-red-400 rounded-full flex items-center justify-center text-white font-semibold text-lg">
              <%= user_avatar_initial(@user) %>
            </div>
            <div class="ml-4">
              <p class="font-medium text-gray-900">User Account</p>
              <p class="text-sm text-gray-600"><%= @user.email %></p>
            </div>
          </div>
          
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div class="p-3 bg-gray-50 rounded-lg">
              <p class="text-gray-600">Member Since</p>
              <p class="font-medium text-gray-900"><%= format_member_since(@user) %></p>
            </div>
            <div class="p-3 bg-gray-50 rounded-lg">
              <p class="text-gray-600">Last Sign In</p>
              <p class="font-medium text-gray-900">
                <%= format_last_sign_in(@user) %>
              </p>
            </div>
          </div>
        </div>

        <!-- Account Actions -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-900 mb-3">Account Actions</h3>
          <div class="space-y-3">
            <%= button_to "Change Password", 
                edit_user_registration_path, 
                method: :get,
                class: "w-full px-4 py-2 text-sm text-gray-700 bg-gray-100 border border-gray-300 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2 transition" %>
            
            <button type="button"
                data-action="click->settings#showDeleteModal"
                class="w-full px-4 py-2 text-sm text-white bg-red-600 border border-red-600 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition">
              üóëÔ∏è Delete Account
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column: Rental History -->
    <div class="lg:col-span-2">
      <!-- Active Rentals -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Active Rentals
          <span class="ml-2 text-sm bg-green-100 text-green-800 px-2 py-1 rounded-full">
            <%= @active_rentals.count %>
          </span>
        </h2>

        <% if @active_rentals.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Rental ID
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Date
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Items
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Status
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @active_rentals.each do |rental| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      #<%= rental.id.to_s.rjust(4, '0') %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                      <%= rental.created_at.strftime("%m/%d/%Y") %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= pluralize(rental.rental_items.count, 'item') %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                        <%= rental.status.titleize %>
                      </span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8 text-gray-500">
            <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <p>No active rentals</p>
            <p class="text-sm mt-1">Your current book rentals will appear here</p>
          </div>
        <% end %>
      </div>

      <!-- Rental History -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
          </svg>
          Rental History
          <span class="ml-2 text-sm bg-gray-100 text-gray-800 px-2 py-1 rounded-full">
            <%= @past_rentals.count %>
          </span>
        </h2>

        <% if @past_rentals.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Rental ID
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Date
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Items
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Status
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @past_rentals.limit(10).each do |rental| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      #<%= rental.id.to_s.rjust(4, '0') %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                      <%= rental.created_at.strftime("%m/%d/%Y") %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= pluralize(rental.rental_items.count, 'item') %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= rental_status_badge_class(rental.status) %>">
                        <%= rental.status.titleize %>
                      </span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          
          <% if @past_rentals.count > 10 %>
            <div class="mt-4 text-center">
              <p class="text-sm text-gray-500">Showing 10 most recent rentals. Total: <%= @past_rentals.count %></p>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8 text-gray-500">
            <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <p>No rental history</p>
            <p class="text-sm mt-1">Your completed and cancelled rentals will appear here</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Navigation Footer -->
  <div class="mt-8 pt-6 border-t border-gray-200 text-center">
    <%= link_to "‚Üê Back to Home", root_path, 
        class: "inline-flex items-center px-4 py-2 text-sm text-gray-600 hover:text-gray-900 transition" %>
  </div>

  <!-- Delete Account Modal -->
  <div id="deleteAccountModal" 
       data-settings-target="modal"
       data-action="click->settings#modalClicked"
       class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <!-- Modal Header -->
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Delete Account</h3>
        <button type="button" 
                data-action="click->settings#hideDeleteModal"
                class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Warning Content -->
      <div class="mb-6">
        <div class="flex items-center mb-3">
          <div class="flex-shrink-0">
            <svg class="w-10 h-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z">
              </path>
            </svg>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-red-800">This action cannot be undone</h4>
          </div>
        </div>
        
        <p class="text-sm text-gray-600 mb-4">
          This will permanently delete your account and remove all associated data, including:
        </p>
        
        <ul class="text-sm text-gray-600 space-y-1 mb-4 ml-4">
          <li>‚Ä¢ Your account information</li>
          <li>‚Ä¢ All rental history</li>
          <li>‚Ä¢ Active rental records</li>
          <li>‚Ä¢ Personal preferences</li>
        </ul>

        <div class="bg-red-50 border border-red-200 rounded-md p-3 mb-4">
          <p class="text-sm text-red-700">
            <strong>Warning:</strong> If you have active rentals, please return them before deleting your account.
          </p>
        </div>

        <!-- Confirmation Input -->
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Type <strong>DELETE</strong> to confirm:
          </label>
          <input type="text" 
                 data-settings-target="confirmInput"
                 data-action="input->settings#validateConfirmation"
                 placeholder="Type DELETE here"
                 class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500">
        </div>
      </div>

      <!-- Modal Actions -->
      <div class="flex justify-end space-x-3">
        <button type="button"
                data-action="click->settings#hideDeleteModal"
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 border border-gray-300 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition">
          Cancel
        </button>
        
        <%= form_with url: settings_path, method: :delete, local: true, 
            data: { 
              "settings-target": "deleteForm",
              action: "submit->settings#handleAccountDeletion"
            } do |form| %>
          <%= form.submit "Delete My Account",
              data: { "settings-target": "deleteButton" },
              class: "px-4 py-2 text-sm font-medium text-white bg-red-600 border border-red-600 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition disabled:opacity-50 disabled:cursor-not-allowed",
              disabled: true %>
        <% end %>
      </div>
    </div>
  </div>

</div>